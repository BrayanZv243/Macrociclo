<?xml version="1.0" encoding="UTF-8"?>
<project name="Macrociclos-Presentación" default="default" basedir=".">
    <!-- Otras configuraciones del proyecto ... -->

    <!-- Definición de propiedades -->
    <property name="src.dir" location="src"/> <!-- Ajusta según sea necesario -->
    <property name="build.classes.dir" location="build/classes"/> <!-- Ajusta según sea necesario -->
    <property name="build.test.classes.dir" location="build/test/classes"/> <!-- Ajusta según sea necesario -->

    <path id="test.classpath">
        <!-- Agrega las rutas necesarias al classpath de las pruebas -->
        <pathelement location="${build.classes.dir}" />
        <pathelement location="${build.test.classes.dir}" />
        <!-- Agrega más rutas según sea necesario -->
    </path>

    <!-- Target para compilar las clases principales -->
    <target name="compile">
        <mkdir dir="${build.classes.dir}"/>
        <javac destdir="${build.classes.dir}" srcdir="${src.dir}">
            <!-- Configuración para compilar las clases principales -->
        </javac>
    </target>

    <!-- Target para compilar las clases de prueba -->
    <target name="compile-test" depends="compile">
        <mkdir dir="${build.test.classes.dir}"/>
        <javac destdir="${build.test.classes.dir}" srcdir="${src.dir}">
            <!-- Configuración para compilar las clases de prueba -->
            <include name="**/*Test*.java" />
        </javac>
    </target>

    <target name="run-tests" depends="compile-test">
        <junit printsummary="on" fork="true" haltonfailure="false">
            <classpath refid="test.classpath" />
            <formatter type="plain" />
            <batchtest fork="yes" todir="${build.test.results.dir}">
                <fileset dir="${src.dir}">
                    <include name="**/*Test*.java" />
                    <!-- Puedes ajustar el patrón de inclusión según tus necesidades -->
                </fileset>
            </batchtest>
        </junit>
    </target>

    <!-- Target para permitir ejecutar 'ant test' -->
    <target name="test" depends="run-tests">
        <!-- Agrega cualquier acción adicional necesaria -->
    </target>

    <!-- Otras configuraciones del proyecto ... -->

</project>
